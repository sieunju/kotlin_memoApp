<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Memo">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/color_transparent</item>
    </style>

    <style name="AppTheme.Login">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorStatusBar</item>
    </style>

    <style name="AppTheme.MemoDetail">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorBackground</item>
    </style>

    <style name="AppTheme.Gallery">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorStatusBar</item>
    </style>


    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorTextPrimaryLight</item>
        <item name="colorControlNormal">@color/colorTextPrimary</item>
        <item name="colorControlHighlight">@color/colorTextPrimary</item>
    </style>

    <!-- [s] Edit Text Style -->
    <style name="EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="EditTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="boxStrokeColor">@color/colorTextInputLayoutLine</item>
        <item name="hintTextColor">@color/colorTextInputLayoutLine</item>
    </style>
    <!-- [e] Edit Text Style -->

    <!-- Memo Contents Style -->
    <style name="MemoRootStyle">
        <item name="android:layout_margin">@dimen/margin_size_10</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/size_6</item>
        <item name="cardElevation">@dimen/size_6</item>
    </style>

    <!-- [s] Default TextView Style -->
    <style name="TitleText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="ContentsText">
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <!-- [e] Default TextView Style -->

</resources>
