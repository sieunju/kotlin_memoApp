<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imgUrl"
            type="String" />

        <variable
            name="viewModel"
            type="com.hmju.memo.viewModels.GalleryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_size_5"
            android:adjustViewBounds="true"
            app:bindImgGallery="@{imgUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@drawable/temp1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:adjustViewBounds="true"
            android:padding="@dimen/padding_size_5"
            android:src="@drawable/ic_remove"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:turtleClick="@{()->viewModel.removePhoto(imgUrl)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>