<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.MainActivity"
    tools:ignore="missingPrefix">

    <data>

        <variable
            name="viewModel"
            type="com.hmju.memo.viewModels.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hmju.memo.base.HeaderView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:header_type="img_search">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="꾸에에에엑!"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_20"
                        app:turtleClick="@{()->viewModel.movePermission()}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="사라지지 않는 메시지 보이기"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_20"
                        app:turtleClick="@{()->viewModel.eventLocationService(true)}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="자 내가 사라져볼께"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_20"
                        app:turtleClick="@{()->viewModel.eventLocationService(false)}" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>

        </com.hmju.memo.base.HeaderView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>