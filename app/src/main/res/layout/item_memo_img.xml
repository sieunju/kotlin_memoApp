<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.hmju.memo.model.memo.MemoImgItem" />

        <variable
            name="listener"
            type="com.hmju.memo.base.BaseViewHolder.BaseClickListener" />

        <variable
            name="viewModel"
            type="com.hmju.memo.viewModels.MainViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/MemoRootStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:turtleClick="@{()->listener.memoClick(item)}">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:bindingImgUrl="@{item.testImgUrl}"
                tools:src="@drawable/ic_profile_default" />

            <!-- 타이틀 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_size_10"
                android:paddingRight="@dimen/padding_size_10"
                android:singleLine="true"
                android:text="@{item.title}"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                tools:text="타이틀 영역 입니다." />

            <!-- 내용 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_5"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="@dimen/padding_size_10"
                android:paddingRight="@dimen/padding_size_10"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14"
                app:commonHtmlText="@{item.contents}"
                tools:text="@string/large_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_marginTop="@dimen/margin_size_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                app:memoTagColor="@{item.tag}"
                tools:background="@color/color_tag2" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</layout>