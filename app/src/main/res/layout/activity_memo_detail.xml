<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.hmju.memo.viewModels.MemoDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 이미지  -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fileList="@{viewModel.changeData.fileList}"
                    tools:visibility="gone" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:selectTag="@{viewModel.changeData}">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag1" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag2" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag3" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag4" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag5" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag6" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/tag_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_tag7" />

                </RadioGroup>

                <!-- 제목 -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10"
                    android:layout_marginTop="@dimen/margin_size_10"
                    android:layout_marginRight="@dimen/margin_size_10"
                    android:hint="@string/str_title"
                    app:counterEnabled="true"
                    app:counterMaxLength="40">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="40"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_20"
                        app:editTextListener="@{viewModel}"
                        app:htmlEdit="@={viewModel.changeData.title}"
                        tools:text="안녕하세요" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- 내용 -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_marginRight="@dimen/margin_size_10"
                    android:hint="@string/str_contents"
                    app:counterEnabled="true"
                    app:counterMaxLength="400">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionGo"
                        android:inputType="textMultiLine"
                        android:maxLength="400"
                        android:minLines="3"
                        android:scrollbars="vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_20"
                        app:editTextListener="@{viewModel}"
                        app:htmlEdit="@={viewModel.changeData.contents}"
                        tools:text="@string/large_text" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10"
                    android:layout_marginTop="@dimen/margin_size_10"
                    android:layout_marginRight="@dimen/margin_size_10">

                    <!-- 카메라 추가 버튼 -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCamera"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40"
                        android:adjustViewBounds="true"
                        app:dayResId="@{@drawable/ic_add_camera_black}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:nightResId="@{@drawable/ic_add_camera_white}"
                        tools:src="@drawable/ic_add_camera_black" />

                    <!-- 사진 추가 버튼 -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40"
                        android:layout_marginLeft="@dimen/margin_size_5"
                        android:adjustViewBounds="true"
                        app:dayResId="@{@drawable/ic_add_photo_black}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imgCamera"
                        app:layout_constraintTop_toTopOf="parent"
                        app:nightResId="@{@drawable/ic_add_photo_white}"
                        tools:src="@drawable/ic_add_photo_black" />

                    <!-- 수정 날짜. -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="수정: 09.01. 15:00" />

                    <!-- 수정 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_change"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>