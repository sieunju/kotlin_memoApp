<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Memo">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/color_transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi" >true</item>
    </style>

    <style name="AppTheme.Login">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorCoolGrey</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <!-- 메모 콘텐츠 기본 스타일 -->
    <style name="MemoRootStyle">
        <item name="android:layout_margin">@dimen/margin_size_10</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/size_6</item>
        <item name="cardElevation">@dimen/size_6</item>
    </style>

</resources>
