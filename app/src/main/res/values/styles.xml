<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!--        <item name="android:navigationBarColor">@color/colorNavigation</item>-->
    </style>

    <style name="AppTheme.Memo">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/color_transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Login">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorStatusBar</item>
    </style>

    <style name="AppTheme.MemoDetail">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Gallery">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <!-- [s] Edit Text Style -->
    <style name="EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="EditTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- [e] Edit Text Style -->

    <!-- Memo Contents Style -->
    <style name="MemoRootStyle">
        <item name="android:layout_margin">@dimen/margin_size_10</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/size_6</item>
        <item name="cardElevation">@dimen/size_6</item>
    </style>

    <!-- [s] Default TextView Style -->
    <style name="TitleText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="ContentsText">
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <!-- [e] Default TextView Style -->

    <!-- [s] Common Dialog Style -->
    <style name="CommonDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">300dp</item>
        <item name="android:windowMinWidthMinor">300dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <!-- [e] Common Dialog Style -->

</resources>
