<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- [s] HeaderView Attrs -->
    <declare-styleable name="HeaderView">
        <attr name="header_type" format="enum">
            <enum name="none" value="0" />
            <enum name="title" value="1" />
            <enum name="img" value="2" />
            <enum name="img_search" value="3" />
        </attr>
    </declare-styleable>
    <!-- [e] HeaderView Attrs -->

    <!-- [s] BlurView Attrs -->
    <declare-styleable name="BlurView">
        <attr name="blurRadius" format="dimension" />
        <attr name="downSampleFactor" format="float" />
        <attr name="overlayColor" format="color" />
    </declare-styleable>
    <!-- [e] BlurView Attrs -->

    <!-- [s] BottomToolbar Attrs -->
    <declare-styleable name="BottomToolbar">
        <attr name="menu" format="reference" />
        <attr name="backgroundColor" format="color" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="sideMargins" format="dimension" />
        <attr name="itemPadding" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="itemFontFamily" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconMargin" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="iconTintActive" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="activeItem" format="integer" />
        <attr name="duration" format="integer" />
    </declare-styleable>
    <!-- [e] BottomToolbar Attrs -->

    <!-- [s] CustomBottomSheetBehavior Attrs -->
    <declare-styleable name="CustomBottomSheetBehavior">
        <attr name="bottomSheet_peekHeight" format="dimension" />
        <attr name="bottomSheet_hideable" format="boolean" />
        <attr name="bottomSheet_skipHalfExpand" format="boolean" />
        <attr name="bottomSheet_skipCollapsed" format="boolean" />
    </declare-styleable>
    <!-- [e] CustomBottomSheetBehavior Attrs -->

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level" value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <!-- [s] Pager Tab Strip Style -->
    <declare-styleable name="PagerTabLayout">
        <attr name="pagerTab_type" format="enum">
            <enum name="fixed" value="0" />
            <enum name="scrollable" value="1" />
        </attr>
        <attr name="pagerTab_textStyle" format="color" />
        <attr name="pagerTab_indicatorColor" format="color" />
        <attr name="pagerTab_indicatorHeight" format="dimension" />
        <attr name="pagerTab_scrollingOffset" format="dimension" />
        <attr name="pagerTab_icon_width" format="dimension" />
    </declare-styleable>
    <!-- [e] Pager Tab Strip Style -->

    <!-- CustomProgressView Attr [Start] -->
    <declare-styleable name="CustomProgressView">
        <attr name="type" format="enum"> <!-- ProgressView type horizontal or vertical -->
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gradientRadius" format="dimension" /> <!-- defines gradient radius -->
        <attr name="gradientStartColor" format="color" /> <!-- defines gradient start color -->
        <attr name="gradientCenterColor" format="color" /> <!-- defines gradient center color -->
        <attr name="gradientEndColor" format="color" /> <!-- defines gradient end color -->
        <attr name="gradientLocation" format="float" /> <!-- defines gradient color location -->
        <attr name="bgColor" format="color" />   <!-- Background Color -->
        <attr name="max" format="integer" /> <!-- defines the maximum value -->
        <attr name="min" format="integer" /> <!-- defines the minimum value -->
    </declare-styleable>
    <!-- CustomProgressView Attr [End] -->

</resources>