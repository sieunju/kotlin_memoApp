<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hmju.memo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="${appLabel}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:testOnly="${testOnly}"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.home.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Memo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.APP_BROWSER" />

                <data
                    android:host="qtzz.synology.me"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.intro.IntroActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Login"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.memo.MemoDetailActivity"
            android:theme="@style/AppTheme.MemoDetail"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".ui.memo.MemoAddActivity" />
    </application>

</manifest>